---
import MixGFX from "../components/MixGFX.astro";
import MixWEB from "../components/MixWEB.astro";
---
<section id="project" class="section">
	<div class="homecolor-box"></div>
	<div class="common_bg animate__animated animate__fadeInLeft">
		<div class="container">
			<div class="text-center">
				<!-- Project Title -->
				<div class="row">
					<div class="col-12">
						<div class="section-title animate__animated animate__fadeInDown animate__delay-1s">
							<p class="common-desctiption">Showcasing some of my work</p>
							<h1 class="common-title">My <span>Projects</span></h1>
							<div class="animated-bar"></div>
						</div>
					</div>
				</div>
				<!-- Project Tag Buttons -->
				<div class="row">
					<div class="col-lg-12">
						<div class="portfolio-menu animate__animated animate__fadeInUp animate__delay-2s">
							<nav class="controls">
								<button type="button" class="control clickbtn" data-filter="all">All</button>
								<button type="button" class="control clickbtn" data-filter=".webdesign">WEBSITES</button>
								<button type="button" class="control clickbtn" data-filter=".gfx">GFXs</button>
							</nav>
						</div>
					</div>
				</div>
				<!-- Project Mix Content -->
				<div class="row portfolio-list animate__zoomIn animate__animated animate__delay-3s">
					<div class="container">
						<ul class="row ps-0">
							<!-- Project Mix Contents -->
							<MixGFX href="assets/images/GFX/1.png" 	caption="20 April 2021" 						size="2160x2160"						/>
							<MixWEB href="01 Redirect-UI" 			caption="01 Redirect-UI/index.html"														/>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
